<div style="text-align:center; padding-top:50px;">

<h1>Create a User</h1>

<div>
<div style="text-align:center">


<%= form_for @user do |f| %>
  <div class="form-group float-center">
    <%= f.label :name, "Full Name", class: "col-md-4 control-label" %><br>
  <div class="col-md-3" style='display:inline-block;'>
    <%= f.text_field :name %>
  </div>
  </div>

  <div class="form-group float-center">
    <%= f.label :user_name, "Username", class: "col-md-4 control-label" %><br>
  <div class="col-md-3" style='display:inline-block;'>
    <%= f.text_field :user_name %>
  </div>
  </div>


  <div class="form-group">
    <%= f.label :password, "Password", class: "col-md-4 control-label" %><br>
  <div class="col-md-3" style='display:inline-block;'>
    <%= f.password_field :password %>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Password Confirmation", class: "col-md-4 control-label" %><br>
  <div class="col-md-3" style='display:inline-block;'>
    <%= f.password_field :password_confirmation %>
  </div>
  </div>

  <%= f.submit "Create User", class: "btn btn-default btn-primary" %>
<% end %>



</div>
